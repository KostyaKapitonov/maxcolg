%table.product_table{'x-ng-controller'=>'ProductsListController', style:'border-collapse: collapse;'}
  -if admin?
    %tr{style: 'height: 36px;'}
      %td
        %a{href: new_product_path, class: 'head_button'}
          Добавить товар
  %tr.product_row{'x-ng-repeat'=>'product in products'}
    %td{style: 'width: 160px;'}
      %div{style: 'float: left; width: 150px; height: 150px; background-color: grey;'}
    %td
      %table.product_header
        %tr
          %td
            %h3{style: 'float: left; margin: 0px 0px 5px 0px;'}
              {{product.name}}
          %td
            %p{style: 'float: right; margin: 3px 0px 5px 0px;'}
              %b
                {{product.price | currency:''}} {{product.price != null ? 'руб.' : 'Цена не установлена.'}}
      %div{'x-ng-bind-html'=>'htmlSafe(product.description)'}

      -if admin?
        %p
          %a.button{'x-ng-href'=>'/products/{{product.id}}/edit', style:'margin-right: 5px;'}
            Править
          %a.button{'x-ng-href'=>'#', 'x-ng-click'=>'delete($index)'}
            Удалить
